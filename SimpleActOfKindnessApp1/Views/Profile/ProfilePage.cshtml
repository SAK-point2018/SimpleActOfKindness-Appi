@* Lunastamattomat palkinnot nappuloina, nappulassa palkinto + vanhemenisaika  *@
@section scripts {
<link href="~/Content/Styles/LoginStyle.css" rel="stylesheet" />
    <script type="text/javascript">
        $(function () {
            $.getJSON("/Profile/Lunastamattomatpalkinnot", null, function (json) {
                var lunastamattomat = JSON.parse(json);

                var html = "";

                for (var index = 0; index < lunastamattomat.length; index++) {
                    html +=
                        "<ul class='list-group'>" +
                        "<input href='' class='list-group-item' value=" + lunastamattomat[index].palkintonimi + lunastamattomat[index].voimassaolopvm + "/>" +
                        "</ul>"
                }
                $('#button').html(html);
            });
        });
    </script>

    <div id=button>
        <p>
        </p>
    </div>

    <h2 style="font-size: 25px; padding-left: 20px"> Lunastetut hyvät työt</h2>

    @* Tehdyt hyvät työt -lista, teko + kirjauspvm *@


    @*tehtyjen tekojen listaaminen tietokannasta*@
    @*JavaScriptillä JSON-kutsu palvelimelle*@


    <script type="text/javascript">
        $(function () {
            $.getJSON("/Profile/Tehdytteotlista", null, function (json) {
                var tehdytTeot = JSON.parse(json);
                //alert("tehdyt teot: " + tehdytTeot.length);

                var html = "";

                for (var index = 0; index < tehdytTeot.length; index++) {
                    //alert("arvo on: " + tehdytTeot[index].Tekopvm);
                    html +=
                        "<ul class='list-group'>" +
                        "<input class='list-group-item' value=" + tehdytTeot[index].Tekopvm + tehdytTeot[index].TeonNimi + "/>" +
                        "</ul>"
                }
                $('#tehtyTekoList').html(html);
            });
        });
    </script>
}
<div style="background-color:white" id=tehtyTekoList>
    <p>
    </p>
</div>
